<%= form_with(model: agency, local: true, class: "space-y-6") do |form| %>
  <% if agency.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-md p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(agency.errors.count, "erreur") %> empêche la sauvegarde :
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% agency.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <div>
    <%= form.label :name, "Nom de l'agence", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500", placeholder: "Ex: Digital Creative Agency" %>
  </div>
  <div>
    <%= form.label :logo, "URL du logo", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.url_field :logo, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500", placeholder: "https://exemple.com/logo.png" %>
    <p class="mt-1 text-sm text-gray-500">URL vers le logo de l'agence (optionnel)</p>
  </div>
  <div>
    <%= form.label :creation_date, "Date de création", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.date_field :creation_date, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" %>
  </div>
  <div>
    <%= form.label :annual_turnover, "Chiffre d'affaires annuel (€)", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.number_field :annual_turnover, step: 0.01, min: 0, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500", placeholder: "Ex: 1500000" %>
    <p class="mt-1 text-sm text-gray-500">Montant en euros (ex: 1500000 pour 1,5M€)</p>
  </div>
  <div>
    <%= form.label :location, "Localisation", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_area :location, rows: 3, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500", placeholder: "Ex: Lyon, Paris, Remote" %>
    <p class="mt-1 text-sm text-gray-500">Villes où l'agence est présente, séparées par des virgules</p>
  </div>
  <div class="flex items-center justify-end space-x-4 pt-6 border-t border-gray-200">
    <%= link_to "Annuler", agencies_path, class: "px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md shadow-sm hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    <%= form.submit agency.persisted? ? "Mettre à jour" : "Créer l'agence", class: "px-4 py-2 text-sm font-medium text-white bg-blue-600 border border-transparent rounded-md shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
  </div>
<% end %>
